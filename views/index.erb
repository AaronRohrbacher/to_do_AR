<h1>Tasks List</h1>
<ol>
  <h1>To Do</h1>

  <a href="/lists">View All Lists</a>

  <p>Here are all your tasks:</p>

  <ul>
    <% @tasks.each do |task| %>
      <li><%= task.description %></li>
    <% end %>
  </ul>
<h2>Add a task!</h2>
<form action="/" method="post">
  <div class="form-group">
    <label for="name">Task Description: </label>
    <input id="task_name" name="name" class="form-control" type="text">
  </div>
  <div class="form-group">
    <label for="dd">Due Date: </label>
    <input id="dd" name="dd" class="form-control" type="date">
  </div>
  <button type="submit" class="btn btn-warning">Add Task</button>
</form>
